<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>	
	<!-- Alias 설정 -->
	<typeAliases>
		<typeAlias alias="member" type="com.travel.biz.member.MemberVO" />
		<typeAlias alias="board" type="com.travel.biz.board.BoardVO" />
		<typeAlias alias="item" type="com.travel.biz.item.ItemVO" />
		<typeAlias alias="plan" type="com.travel.biz.plan.PlanVO" />
	</typeAliases>
	
	<!-- Sql Mapper 설정 -->
	<mappers>
		<mapper resource="mappings/member-mapping.xml" />
		<mapper resource="mappings/board-mapping.xml" />
		<mapper resource="mappings/item-mapping.xml" />
		<mapper resource="mappings/plan-mapping.xml" />
	</mappers>
</configuration>